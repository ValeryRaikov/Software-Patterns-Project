<Window x:Class="WeddingPlannerWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WeddingPlannerWPF.ViewModels"
        mc:Ignorable="d"
        Title="Wedding Seating Planner" Height="700" Width="1000">
    
    <Window.DataContext>
        <local:MainViewModel />
    </Window.DataContext>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Left Panel - Controls -->
        <StackPanel Grid.Column="0" Margin="10">
            <!-- Add Guest -->
            <GroupBox Header="Add Guest" Margin="0,0,0,10">
                <StackPanel>
                    <TextBox Text="{Binding GuestName, UpdateSourceTrigger=PropertyChanged}" 
                             Margin="5" Padding="3"/>
                    <TextBlock Text="Guest Name" Margin="5,0" Foreground="Gray" FontSize="10"/>

                    <TextBox Text="{Binding FamilyId, UpdateSourceTrigger=PropertyChanged}" 
                             Margin="5" Padding="3"/>
                    <TextBlock Text="Family ID" Margin="5,0" Foreground="Gray" FontSize="10"/>

                    <Button Content="Add Guest" Command="{Binding AddGuestCommand}" Margin="5"/>
                </StackPanel>
            </GroupBox>

            <!-- Tables -->
            <GroupBox Header="Tables" Margin="0,0,0,10">
                <StackPanel>
                    <Button Content="Create New Table" Command="{Binding CreateTableCommand}" Margin="5"/>

                    <!-- =============== FIX: ADDED VISUAL FEEDBACK =============== -->
                    <TextBlock Text="1. Select guest from left list" Margin="5,10,5,0" FontWeight="Bold" Foreground="DarkBlue"/>
                    <TextBlock Text="2. Select table from right list" Margin="5,0,5,5" FontWeight="Bold" Foreground="DarkBlue"/>
                    <Button Content="Assign Selected Guest" Command="{Binding AssignGuestCommand}" Margin="5" Background="LightGreen"/>

                    <TextBox Text="{Binding FamilyId, UpdateSourceTrigger=PropertyChanged}" 
                             Margin="5,10,5,0" Padding="3"/>
                    <TextBlock Text="Family ID to Assign" Margin="5,0,5,5" Foreground="Gray" FontSize="10"/>
                    <Button Content="Assign Family" Command="{Binding AssignFamilyCommand}" Margin="5"/>
                </StackPanel>
            </GroupBox>

            <!-- Ban Families -->
            <GroupBox Header="Ban Family Pair" Margin="0,0,0,10">
                <StackPanel>
                    <TextBox Text="{Binding BanFamily1, UpdateSourceTrigger=PropertyChanged}" 
                             Margin="5" Padding="3"/>
                    <TextBlock Text="First Family" Margin="5,0" Foreground="Gray" FontSize="10"/>

                    <TextBox Text="{Binding BanFamily2, UpdateSourceTrigger=PropertyChanged}" 
                             Margin="5" Padding="3"/>
                    <TextBlock Text="Second Family" Margin="5,0" Foreground="Gray" FontSize="10"/>

                    <Button Content="Ban Family Pair" Command="{Binding BanFamilyCommand}" Margin="5"/>
                    <Button Content="Show Table Details" Command="{Binding ShowTableDetailsCommand}" Margin="5"/>
                </StackPanel>
            </GroupBox>

            <!-- Observer Pattern -->
            <GroupBox Header="Observer Pattern" Background="LightYellow">
                <StackPanel>
                    <TextBlock Text="Wedding Planner Notifications" FontWeight="Bold" Margin="5"/>
                    <Button Content="Show All Notifications" Command="{Binding ShowNotificationsCommand}" Margin="5"/>
                    <Button Content="Clear Notifications" Command="{Binding ClearNotificationsCommand}" Margin="5"/>
                    <TextBlock Text="Observer pattern actively monitors table changes" 
                               TextWrapping="Wrap" Margin="5" FontSize="10" Foreground="DarkBlue"/>
                </StackPanel>
            </GroupBox>
        </StackPanel>

        <!-- Right Panel - Display -->
        <Grid Grid.Column="1" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="200"/>
                <RowDefinition Height="150"/>
            </Grid.RowDefinitions>

            <!-- Available Guests and Tables -->
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- =============== FIX: BETTER LISTBOX BINDING =============== -->
                <GroupBox Header="Available Guests" Margin="5">
                    <StackPanel>
                        <TextBlock Text="Click to select a guest:" Margin="5,5,5,0" FontWeight="Bold"/>
                        <ListBox ItemsSource="{Binding AvailableGuests}" 
                                 SelectedItem="{Binding SelectedGuest, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 DisplayMemberPath="Name"
                                 Height="200"
                                 Margin="5"/>
                        <TextBlock Text="{Binding SelectedGuest.Name, StringFormat='Selected: {0}'}" 
                                   Margin="5" FontStyle="Italic" Foreground="DarkGreen"/>
                    </StackPanel>
                </GroupBox>

                <GroupBox Header="Tables" Grid.Column="1" Margin="5">
                    <StackPanel>
                        <TextBlock Text="Click to select a table:" Margin="5,5,5,0" FontWeight="Bold"/>
                        <ListBox ItemsSource="{Binding Tables}" 
                                 SelectedItem="{Binding SelectedTable, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 DisplayMemberPath="Name"
                                 Height="200"
                                 Margin="5"/>
                        <TextBlock Text="{Binding SelectedTable.Name, StringFormat='Selected: {0}'}" 
                                   Margin="5" FontStyle="Italic" Foreground="DarkGreen"/>
                    </StackPanel>
                </GroupBox>
            </Grid>

            <!-- Log -->
            <GroupBox Header="Event Log" Grid.Row="1" Margin="5">
                <TextBox Text="{Binding Log, Mode=OneWay}" 
                         IsReadOnly="True" 
                         VerticalScrollBarVisibility="Auto"
                         TextWrapping="Wrap"
                         FontFamily="Consolas"/>
            </GroupBox>

            <!-- Observer Pattern Notifications -->
            <GroupBox Header="🔔 Observer Pattern Notifications" Grid.Row="2" Margin="5" Background="LightCyan">
                <TextBox Text="{Binding NotificationLog, Mode=OneWay}" 
                         IsReadOnly="True" 
                         VerticalScrollBarVisibility="Auto"
                         TextWrapping="Wrap"
                         FontFamily="Consolas"
                         FontSize="10"
                         Background="White"/>
            </GroupBox>
        </Grid>
    </Grid>
</Window>
